{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "typeRoots": ["node_modules/@types"],
    "types": [],
    "skipLibCheck": true,
    "lib": ["es2020", "dom"]
  },
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "cypress/**/*",
    "cypress.config.ts"
  ]
}
